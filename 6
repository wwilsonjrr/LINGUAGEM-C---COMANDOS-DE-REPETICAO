/*  6. Faça um programa que leia 10 inteiros e imprima sua média.  */

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i = 1; // inicialização

    int soma = 0;

    int num;

    while(i <= 10)
    {
        printf("Digite o %do. numero: \n", i);
        scanf("%d", &num);
        soma = soma + num;
        i++;
    }
    printf("\nO resultado da soma eh: %.1f\n", (float)soma/10);

    system("pause");
    return 0;
}
