/*  7. Faça um programa que leia 10 inteiros positivos, ignorando nao positivos, e imprima sua ˜
media.  */

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i = 1; // inicialização (contador)

    int soma = 0; // acululador

    int num; // armazena o número que eu digitar

    while (i <= 10)
    {
        printf("\Digite o %do. numero \n", i);
        scanf("%d", &num);

        if (num > 0)
        {
            soma = soma + num;
            i++;
        }
        else
        {
            printf("Numero invalido. Digite apenas numeros positivos. \n");
        }

    } // controla o numero de execuções

    printf("\nO resultado da media  eh: %.1f \n", (float)soma / 10);

    system("pause");
    return 0;
}

