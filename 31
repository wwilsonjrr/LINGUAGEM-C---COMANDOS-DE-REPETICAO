/* 31. Faça um programa que calcule e escreva o valor de S

       S = 1/1 + 3/2 + 5/3 + 7/4 ... 99/50
*/


#include <stdio.h>
#include <stdlib.h>

int main()
{
    float S = 0.0;        // variável acumuladora da soma
    int numerador = 1;    // começa em 1

    // há 50 termos (denominador vai de 1 até 50)
    for (int denominador = 1; denominador <= 50; denominador++)
    {
        // soma o termo atual da série
        S += (float)numerador / denominador;

        // incrementa o numerador de 2 em 2 (1, 3, 5, 7, ..., 99)
        numerador += 2;
    }

    // exibe o resultado final
    printf("O valor de S eh: %.2f\n", S);

    system("pause");
    return 0;
}

