/*  14. Faça um programa que leia um numero inteiro positivo par N e imprima todos os numeros
pares de 0 até N em ordem decrescente.  */



#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i; // contador // Você não pode tentar inicializar i = n antes de declarar e ler n

    int n; // armazena número

    printf("Digite um numero inteiro positivo par qualquer: \n");
    scanf("%d", &n);

    if ((n % 2 != 0)||(n < 0))
    {
        printf("Numero invalido. Digite apenas numeros positivos pares.\n");
    }
    else
    {
        i = n;
        while (i >= 0)
        {
            printf("%d \n", i);
            i-= 2;   // incrementa até chegar em N
        }
    }

    system("pause");
    return 0;
}
