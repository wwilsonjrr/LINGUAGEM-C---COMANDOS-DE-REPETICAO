/*  8. Escreva um programa que leia 10 numeros e escreva o menor valor lido e o maior valor lido.  */

#include <stdio.h>
#include <stdlib.h>

int main()
{
    float valor, menor, maior;
    int i = 1;

    while (i <= 10)
    {
        printf("Digite o %do. numero: ", i);
        scanf("%f", &valor);

        if (i == 1)
        {
            // O primeiro valor serve de referência inicial
            menor = valor;
            maior = valor;
        }
        else
        {
            if (valor < menor)
            {
                menor = valor;
            }
            if (valor > maior)
            {
                maior = valor;
            }
        }

        i++; // não pode esquecer de incrementar!
    }

    printf("\nMenor valor lido: %.2f\n", menor);
    printf("Maior valor lido: %.2f\n", maior);

    system("pause");
    return 0;
}

