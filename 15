/*  15. Faça um programa que leia um numero inteiro positivo ímpar N e imprima todos os
numeros ímpares de 1 até N em ordem crescente.  */


#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i = 1; // inicialização

    int n; // armazena número

    printf("Digite um numero inteiro positvo impar qualquer: \n");
    scanf("%d", &n);

    if ((n % 2 == 0) && (n <= 0))
    {
        printf("Numero invalido. Digite apenas numeros positivos impares.\n");
    }
    else
    {
        while (i <= n)
        {
            printf("%d \n", i);
            i+= 2;   // incrementa até chegar em N
        }
    }

    system("pause");
    return 0;
}
