/*  11. Faça um programa que leia um numero inteiro positivo N e
imprima todos os numeros naturais de 0 ate N em ordem crescente.  */

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i = 0; // inicialização

    int n; // armazena o número

    printf("Digite um numero inteiro positivo qualquer: \n");
    scanf("%d", &n);

    if (n < 0)
    {
        printf("Numero invalido. Digite apenas numeros positivos ou nulo.\n");
    }
    else
    {
        while (i <= n)
        {
            printf("%d \n", i);
            i++;   // incrementa até chegar em N
        }
    }

    system("pause");
    return 0;
}

